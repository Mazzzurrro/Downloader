#:import threading threading

<Button>
    background_color: (0,0,1,1)
	font_size: 15				
	color: (1,1,0,1)
	bold: True
	italic: True
	outline_color: (124,252,0)
	outline_width: 2
    size_hint_y: None
    height: 30
    width: root.width
<TextInput>
    size_hint_y: None
    height: 30 


WindowManager:
    FirstWindow:
    SecondWindow:
   
<FirstWindow>:
    name: "first"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gui-background.jpg'      
    AnchorLayout:
        anchor_x: "left" 
        anchor_y: "top"     
        GridLayout:  
            cols:3                      
            size_hint: None, None
            size: self.minimum_size                        
            
            Label:
                text: "Insert link to download single video"
                background_color: (0,0,1,1)
                bold: True
            	italic: True
            	outline_color: (124,252,0)
            	outline_width: 2
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos:self.pos
                size_hint: (None,None)
                size: (300, 30)
                valign:"middle"
            TextInput:
                id: url      
                multiline: False
                size_hint: (None,None)
                size: (400, 30) 
            Button:
                text: "Click here to download a file"
                size_hint: (None,None)
                size: (300, 30)
                on_press:
                    threading.Thread(target=root.showtitle).start()
                    threading.Thread(target=root.DownloadSingle).start()                                  
            Label:
                id: suggestionlabel
                text: "Search YouTube for a link to video"
                background_color: (0,0,1,1)
                bold: True
            	italic: True
            	outline_color: (124,252,0)
            	outline_width: 2
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos:self.pos
                valign:"middle"
                size_hint: (None,None)
                size: (300, 30)
            TextInput:
                id: suggestioninput
                multiline:False
                size_hint: (None,None)
                size: (400, 30)
            Button:
                text: "Search YouTube for suggestion"
                size_hint: (None,None)
                size: (300,30)
                on_press:
                    root.suggest()      
    RelativeLayout:
        size_hint: None, None
        pos_hint: {'x':0, 'center_y':0.17}
        GridLayout:
            cols:2
            size_hint: None, None
            size: self.minimum_size
            Button:
            	text: "Download destination..."
        		size_hint: (None,None)
                size: (200,30)
        		on_release:
            		root.file_chooser()   
            Label:
                id: output_label
                text: "Selected: Video File"
                background_color: (0,0,1,1)
                bold: True
            	italic: True
            	outline_color: (124,252,0)
            	outline_width: 2
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos:self.pos
                size_hint: (None,None)
                size: (200,30)
            Label:
                id: path
                text: root.path
                background_color: (0,0,1,1)
                bold: True
            	italic: True
            	outline_color: (124,252,0)
            	outline_width: 2
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos:self.pos
                size_hint: (None,None)
                size: (200,30)
                
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "mp3")
                size_hint_x: 0.1
                canvas.before:
                    Color:
                        rgb: 1,0,0
                    Rectangle:
                        pos:self.center_x-8, self.center_y-8
                        size:[16,16]
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size:[14,14]
    RelativeLayout:
        size_hint: None, None
        pos_hint: {'x':0, 'y':0}
        Button:
            text: "Download a playlist from Youtube -->"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint: (None,None)
            size: (400,30)
            on_release: 
                app.root.current= "second"
                root.manager.transition.direction = "right"        
    RelativeLayout:
        id: downloaded
        size_hint: 0.5, 0.4
        pos_hint:{'x':0, 'y': 0.6}
       
            
    RelativeLayout:
        size_hint: 0.5, 0.85
        pos_hint: {'right':1, 'bottom':1}
        RecycleView:
            id: rv
            viewclass: 'Button'
            RecycleBoxLayout:            
                default_size: None, dp(26)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'  
                
<SecondWindow>:
    name: "second"
    BoxLayout:
        cols:1
        size: root.width, root.height
        orientation: "vertical"			
        Label:
            text: "Download a playlist from Youtube - insert link"
        TextInput:
            id: url
            multiline: False
        BoxLayout:       
            Button:
    			text: "Choose download destination"
    			on_release:
        			root.file_chooser()        
            Button:
                text: "Click here to download a playlist"  
                on_press: 
                    t=threading.Thread(target=root.showtitle)
                    k=threading.Thread(target=root.DownloadPlaylist)
                    t.start()
                    k.start()
        Label:
            id: path
            text: root.path
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2
                        
        Label:
            text: "Check if you want to download .mp3 file"
        CheckBox:
            on_active: root.checkbox_click(self, self.active,"mp3")    
        Label:
            id: output_label
            text: "You selected downloading video file"
        Label:
            id: current
            text: root.title_text
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2
        Button:
            text: "<-- Download a single video from Youtube"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint_y: None
            on_release: 
                app.root.current= "first"
                root.manager.transition.direction = "left"   
              		
              		
                
        
 
    
    
    
                    
  
        
            
    
    






    
                    
    
        
            
    
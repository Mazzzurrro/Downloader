<Label>
    background_color: (0,0,1,1)
	font_size: 15				
	color: (1,1,0,1)
	bold: True
	italic: True
	outline_color: (124,252,0)
	outline_width: 2
	size_hint_y: None
	height: 30
<Button>
    size_hint_y: None
    height: 30
    font_size: 15
<TextInput>
    size_hint_y: None
    height: 30

WindowManager:
    FirstWindow:
    SecondWindow:    

<MyLayout>
<FirstWindow>:
    name: "first"
    BoxLayout:
        cols:1
        size: root.width, root.height
        orientation: "vertical"			
        Label:
            text: "Download Single File from Youtube - insert link"
        TextInput:
            id: url
            multiline: False
        Label:
            text: "Check if you want to download .mp3 file"
        CheckBox:
            on_active: root.checkbox_click(self, self.active,"mp3")
        Button:
            text: "Click here to download a file"
            on_press: root.DownloadSingle()   
        Label:
            id: output_label
            text: "You selected downloading video file"
        Button:
            text: "Download a playlist from Youtube -->"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint_y: None
            on_release: 
                app.root.current= "second"
                root.manager.transition.direction = "right"    
<SecondWindow>:
    name: "second"
    BoxLayout:
        cols:1
        size: root.width, root.height
        orientation: "vertical"			
        Label:
            text: "Download a playlist from Youtube - insert link"
        TextInput:
            id: url
            multiline: False
        Label:
            text: "Check if you want to download .mp3 file"
        CheckBox:
            on_active: root.checkbox_click(self, self.active,"mp3")
        Button:
            text: "Click here to download a playlist"  
            on_press: root.DownloadPlaylist()  
        Label:
            id: output_label
            text: "You selected downloading video file"
        Button:
            text: "<-- Download a single video from Youtube"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint_y: None
            on_release: 
                app.root.current= "first"
                root.manager.transition.direction = "left"    

    
                        
    


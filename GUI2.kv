#:import threading threading

<Label>
    background_color: (0,0,1,1)
	font_size: 15				
	color: (1,1,0,1)
	bold: True
	italic: True
	outline_color: (124,252,0)
	outline_width: 2
<Button>
    size_hint_y: None
    height: 30
    width: root.width
<TextInput>
    size_hint_y: None
    height: 30   


WindowManager:
    FirstWindow:
    SecondWindow:    

<MyLayout>
<FirstWindow>:
    name: "first"
    BoxLayout:
        cols:1
        size: root.height , root.width
        orientation: "vertical"			
        Label:
            text: "Download Single File from Youtube - insert link"
        TextInput:
            id: url      
            multiline: False 
        BoxLayout:                                          
    		Button:
    			text: "Choose download destination"
    			on_release:
        			root.file_chooser()        
            Button:
                text: "Click here to download a file"
                on_press:
                    threading.Thread(target=root.showtitle).start()
                    threading.Thread(target=root.DownloadSingle).start()
        Label:
            id: path
            text: root.path
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2       
        Label:
            text: "Check if you want to download .mp3 file"
        CheckBox:
            on_active: root.checkbox_click(self, self.active,"mp3")    
        Label:
            id: output_label
            text: "You selected downloading video file"
        Label:
            id: current
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2
            
            text: root.title_text
        Button:
            text: "Download a playlist from Youtube -->"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint_y: None
            on_release: 
                app.root.current= "second"
                root.manager.transition.direction = "right"    
<SecondWindow>:
    name: "second"
    BoxLayout:
        cols:1
        size: root.width, root.height
        orientation: "vertical"			
        Label:
            text: "Download a playlist from Youtube - insert link"
        TextInput:
            id: url
            multiline: False
        BoxLayout:       
            Button:
    			text: "Choose download destination"
    			on_release:
        			root.file_chooser()        
            Button:
                text: "Click here to download a playlist"  
                on_press: 
                    t=threading.Thread(target=root.showtitle)
                    k=threading.Thread(target=root.DownloadPlaylist)
                    t.start()
                    k.start()
        Label:
            id: path
            text: root.path
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2
                        
        Label:
            text: "Check if you want to download .mp3 file"
        CheckBox:
            on_active: root.checkbox_click(self, self.active,"mp3")    
        Label:
            id: output_label
            text: "You selected downloading video file"
        Label:
            id: current
            text: root.title_text
            color: (1,1,2,1)
            background_color: (1,1,1,1)
            outline_color: (124,252,0)
        	outline_width: 2
        Button:
            text: "<-- Download a single video from Youtube"
            background_color: (1,0,1,1)
        	font_size: 15				
        	color: (1,1,0,1)
        	bold: True
        	italic: True
        	outline_color: (124,252,0)
        	outline_width: 2
        	size_hint_y: None
            on_release: 
                app.root.current= "first"
                root.manager.transition.direction = "left"    

    
                        
    

